/* pages/user/register/register.wxss */
@import "../../../css/weui.wxss";

.page-body {
  display: flex;
  height: 100%;
  /* align-items: center; *//* justify-content: center; */
  flex-direction: column;
}

.warning_box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 50px;
}

.warning {
  color: red;
  font-size: 14px;
  text-align: center;
}

.section {
  display: flex;
  flex-direction: column;
}

.section-title {
  padding: 10px;
}

.section-input {
  padding: 10px;
  background: white;
}

.btn-area {
  padding: 0 20px;
  margin-top: 20px;
}

.radio-group {
  padding: 10px;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.radio {
  flex: 1;
  display: flex;
  justify-content: center;
}
